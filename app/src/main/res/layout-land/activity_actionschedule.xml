<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="520dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/actSchedCoorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/schedTodaysActionBut"
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="333dp"
                        android:layout_marginTop="50dp"
                        android:text="Todays Actions" />

                    <EditText
                        android:id="@+id/searchBarText"
                        android:layout_width="413dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter Business Partner"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/searchBut"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="413dp"
                        android:text="Search" />

                    <Button
                        android:id="@+id/schedAllActionsBut"
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:text="All Actions" />

                    <Button
                        android:id="@+id/schedTodaysRouteBut"
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="50dp"
                        android:text="Todays Route" />

                </android.support.design.widget.CoordinatorLayout>

            </LinearLayout>
        </ScrollView>





    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>