<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <Button
            android:id="@+id/actionScheduleBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="320dp"
            android:text="Action Schedule" />


        <Button
            android:id="@+id/requestBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:text="Request" />

        <Button
            android:id="@+id/routePlanBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="160dp"
            android:text="Route Plan" />

        <Button
            android:id="@+id/todaysActionsBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="240dp"
            android:text="Todays Actions" />


        <Button
            android:id="@+id/custInfoBut"
            android:layout_width="396dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:text="Customer Info" />

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="378dp"
            android:layout_height="57dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:text="Good Morning Steve"
            android:textAlignment="textStart"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="179dp"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="501dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/border"
            android:text="URGENT - Mackays of Halkirk sales have dropped 73% on Soft Drinks"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="501dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/border"
            android:text="Sales in total are up 2.3% on last month"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="501dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/border"
            android:text="One Stop Shop sales are down 9.7% over the last 3 months"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="501dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border"
            android:text="Oykel Bridge have stopped ordering Soft Drinks"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/SeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:text="See More" />

        <Button
            android:id="@+id/SeeMore4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="230dp"
            android:text="See More" />

        <Button
            android:id="@+id/SeeMore3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="170dp"
            android:text="See More" />

        <Button
            android:id="@+id/SeeMore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="110dp"
            android:text="See More" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="366dp"
            android:layout_height="47dp"
            android:layout_gravity="right"
            android:layout_marginRight="235dp"
            android:layout_marginTop="5dp"
            android:text="Daily Notifications"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:text="Last Synchronised Date : "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textClock2"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp"
            android:textSize="18sp"
            android:text="23/07/17 15:03:01"/>



        <com.imanoweb.calendarview.CustomCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:layout_marginLeft="420dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_weight="0.41">
        </com.imanoweb.calendarview.CustomCalendarView>


    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>