<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <Button
            android:id="@+id/actionScheduleBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="320dp"
            android:text="Action Schedule" />


        <Button
            android:id="@+id/requestBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:text="Request" />

        <Button
            android:id="@+id/routePlanBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="160dp"
            android:text="Route Plan" />

        <Button
            android:id="@+id/todaysActionsBut"
            android:layout_width="397dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="240dp"
            android:text="Todays Actions" />


        <Button
            android:id="@+id/custInfoBut"
            android:layout_width="396dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:text="Customer Info" />

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="378dp"
            android:layout_height="57dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:text="Good Morning Steve"
            android:textAlignment="textStart"
            android:textSize="36sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:layout_gravity="bottom"
            android:dateTextAppearance="@android:style/TextAppearance.Large"

            android:weekDayTextAppearance="@android:style/TextAppearance.Medium"
            android:padding="5dp"
            android:layout_marginLeft="400dp" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="179dp"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="470dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
